{
    "compilerOptions": {
        "target": "ES2017",
        "module": "NodeNext",
        "lib": [
            "ESNext",
            "DOM",
            "WebWorker"
        ],
        "sourceMap": true,
        "outDir": "out",
        "strict": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "noImplicitOverride": true,
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "rootDir": ".",
        "noEmit": true
    },
    "include": [
        "src/**/*.ts",
        "test/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
